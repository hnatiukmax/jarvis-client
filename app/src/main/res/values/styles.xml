<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Theme for splash screen   -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
    </style>

    <!-- Widgets  -->
    <style name="AppTheme.ToolbarActionButton">
        <item name="android:maxWidth">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/selectableBackgroundPadding</item>
    </style>

    <style name="AppTheme.ToolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSizeTitleToolbar</item>
    </style>

    <style name="AppTheme.SocialAuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:translationZ">5dp</item>
    </style>

</resources>
