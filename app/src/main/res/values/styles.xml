<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/ff_avenir_next_rounded</item>

        <item name="selectableItemBackgroundRounded">@drawable/selectable_item_background_rounded</item>
        <item name="selectableItemBackgroundCircle">@drawable/selectable_item_background_circle</item>
        <item name="selectableItemBackgroundHalfCircle">@drawable/selectable_item_background_half_circle</item>
        <item name="selectableItemBackgroundRoundedGreen">@drawable/selectable_item_background_rounded_green</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="bottomSheetDialogTheme">@style/AppTheme.BottomSheetDialog</item>

    </style>

    <!-- Theme for splash screen   -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/ic_splash_screen</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/slide_left_enter</item>
        <item name="android:windowExitAnimation">@anim/empty</item>
    </style>

    <!-- Widgets  -->

    <!-- Text  -->
    <style name="AppTheme.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.Text.Demi">
        <item name="android:fontFamily">@font/ff_avenir_next_rounded_demi</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">300</item>
    </style>

    <style name="AppTheme.Text.Demi.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="AppTheme.Text.Demi.Medium">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="AppTheme.Text.Demi.Large">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="AppTheme.Text.Medium">
        <item name="android:fontFamily">@font/ff_avenir_next_rounded_medium</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="AppTheme.Text.Medium.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="AppTheme.Text.Medium.Medium">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="AppTheme.Text.Medium.Large">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="passwordToggleTint">@null</item>
        <item name="passwordToggleDrawable">@drawable/password_toggle_selector</item>
        <item name="android:colorControlHighlight">@null</item>
        <item name="android:colorActivatedHighlight">@null</item>
        <item name="android:colorControlActivated">@null</item>

        <item name="android:colorAccent">@null</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/editTextUnderlineNormal</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColorHint">@color/edit_text_hint</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:background">@drawable/transparent_background_with_underline_normal
        </item>
    </style>

    <style name="AppTheme.ToolbarActionButton">
        <item name="android:maxWidth">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/selectableBackgroundPadding</item>
    </style>

    <style name="AppTheme.ToolbarTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSizeTitleToolbar</item>
    </style>

    <!--  Button  -->
    <style name="AppTheme.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/defaultButtonHeight</item>
        <item name="android:foreground">?attr/selectableItemBackgroundRounded</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:fontFamily">@font/avenir_next_rounded_demi</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="AppTheme.Button.Main">
        <item name="android:background">@drawable/background_button_main_selector</item>
        <item name="android:textColor">@color/button_main_text</item>
    </style>

    <style name="AppTheme.Button.White">
        <item name="android:background">@drawable/background_simple_button</item>
    </style>


    <style name="AppTheme.NoBackgroundButton" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:fontFamily">@font/avenir_next_rounded_demi</item>
        <item name="android:stateListAnimator">@animator/animation_press_no_background_button</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">@dimen/noBackgroundButtonPaddingHorizontal</item>
        <item name="android:paddingRight">@dimen/noBackgroundButtonPaddingHorizontal</item>
        <item name="android:paddingTop">@dimen/noBackgroundButtonPaddingVertical</item>
        <item name="android:paddingBottom">@dimen/noBackgroundButtonPaddingVertical</item>
    </style>

    <style name="AppTheme.NoBackgroundButton.White">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="AppTheme.NoBackgroundButton.Black">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="AppTheme.SocialAuthButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundRoundedGreen</item>
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/background_button_auth</item>

        <item name="android:fontFamily">@font/avenir_next_rounded_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFA6A29E</item>
    </style>

    <!-- Dialogs -->
    <style name="CreateTaskDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowBackground">@drawable/background_progress_view</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheet.Modal</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
