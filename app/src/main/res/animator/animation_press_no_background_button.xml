<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:duration="70"
                android:propertyName="alpha"
                android:valueTo="0.5"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="70"
                android:propertyName="scaleX"
                android:valueTo="1.03"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="70"
                android:propertyName="scaleY"
                android:valueTo="1.03"
                android:valueType="floatType" />
        </set>
    </item>

    <item>
        <set>
            <objectAnimator
                android:duration="70"
                android:propertyName="alpha"
                android:valueTo="1"
                android:valueType="floatType" />

            <objectAnimator
                android:duration="70"
                android:propertyName="scaleX"
                android:valueTo="1."
                android:valueType="floatType" />

            <objectAnimator
                android:duration="70"
                android:propertyName="scaleY"
                android:valueTo="1."
                android:valueType="floatType" />
        </set>
    </item>

</selector>