<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <View
        android:id="@+id/dividerLeft"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_divider_height"
        android:layout_marginTop="@dimen/default_margin_large"
        android:background="@color/line_divider"
        app:layout_constraintEnd_toStartOf="@id/dividerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dividerTitle"
        style="@style/AppTheme.Text.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/common_or_divider"
        android:textColor="@color/text_hint_80"
        app:layout_constraintBottom_toBottomOf="@+id/dividerLeft"
        app:layout_constraintEnd_toStartOf="@+id/dividerRight"
        app:layout_constraintStart_toEndOf="@+id/dividerLeft"
        app:layout_constraintTop_toTopOf="@id/dividerLeft" />

    <View
        android:id="@+id/dividerRight"
        android:layout_width="0dp"
        android:layout_height="@dimen/view_divider_height"
        android:layout_marginEnd="@dimen/default_margin_small"
        android:background="@color/line_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dividerTitle"
        app:layout_constraintTop_toTopOf="@id/dividerLeft" />

</androidx.constraintlayout.widget.ConstraintLayout>